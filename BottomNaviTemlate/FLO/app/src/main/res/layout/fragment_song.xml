<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/album_mix_cv"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#F9F9F9"
                app:cardCornerRadius="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/album_taste_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="내 취향 MIX"
                android:textColor="#000000"
                android:textSize="12sp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/album_mix_cv"
                app:layout_constraintStart_toStartOf="@+id/album_mix_cv"
                app:layout_constraintTop_toTopOf="@+id/album_mix_cv"

                />

            <ImageView
                android:id="@+id/album_toggle_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_toggle_off"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/album_taste_tv"
                app:layout_constraintStart_toEndOf="@+id/album_taste_tv"
                app:layout_constraintTop_toTopOf="@+id/album_taste_tv" />

            <ImageView
                android:id="@+id/album_select_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/btn_playlist_select_off"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/album_toggle_iv" />

            <TextView
                android:id="@+id/album_select_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체선택"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/album_select_iv"
                app:layout_constraintStart_toEndOf="@+id/album_select_iv"
                app:layout_constraintTop_toTopOf="@+id/album_select_iv" />

            <TextView
                android:id="@+id/album_listen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="전체듣기"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/album_select_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/album_select_tv" />

            <ImageView
                android:id="@+id/album_icon_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_browse_arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/album_listen_tv"
                app:layout_constraintEnd_toStartOf="@+id/album_listen_tv"
                app:layout_constraintTop_toTopOf="@+id/album_listen_tv" />

            <TextView
                android:id="@+id/album_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="01"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/album_icon_iv" />

            <TextView
                android:id="@+id/album_number2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="02"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_number_tv"
                app:layout_constraintTop_toBottomOf="@+id/album_artist2_tv" />

            <TextView
                android:id="@+id/album_number3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="03"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_number2_tv"
                app:layout_constraintTop_toBottomOf="@+id/album_artist3_tv" />

            <TextView
                android:id="@+id/album_number4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="04"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_number3_tv"
                app:layout_constraintTop_toBottomOf="@+id/album_artist4_tv" />


            <androidx.cardview.widget.CardView
                android:id="@+id/album_radius_cv"
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginStart="7dp"
                app:cardBackgroundColor="#6767FF"
                app:cardCornerRadius="70dp"
                app:layout_constraintBottom_toBottomOf="@id/album_number_tv"
                app:layout_constraintStart_toEndOf="@+id/album_number_tv"
                app:layout_constraintTop_toTopOf="@+id/album_number_tv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/album_radius2_cv"
                android:layout_width="40dp"
                android:layout_height="13dp"
                android:layout_marginStart="7dp"
                app:cardBackgroundColor="#6767FF"
                app:cardCornerRadius="70dp"
                app:layout_constraintBottom_toBottomOf="@+id/album_number3_tv"
                app:layout_constraintStart_toEndOf="@+id/album_number3_tv"
                app:layout_constraintTop_toTopOf="@+id/album_number3_tv" />

            <TextView
                android:id="@+id/album_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/album_radius_cv"
                app:layout_constraintEnd_toEndOf="@+id/album_radius_cv"
                app:layout_constraintStart_toStartOf="@+id/album_radius_cv"
                app:layout_constraintTop_toTopOf="@+id/album_radius_cv" />

            <TextView
                android:id="@+id/album_title2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/album_radius2_cv"
                app:layout_constraintEnd_toEndOf="@+id/album_radius2_cv"
                app:layout_constraintStart_toStartOf="@+id/album_radius2_cv"
                app:layout_constraintTop_toTopOf="@+id/album_radius2_cv" />

            <TextView
                android:id="@+id/album_name2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="라일락"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/album_title_tv"
                app:layout_constraintStart_toEndOf="@+id/album_radius_cv"
                app:layout_constraintTop_toTopOf="@id/album_title_tv" />

            <TextView
                android:id="@+id/album_name3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Flu"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/album_number2_tv"
                app:layout_constraintTop_toTopOf="@+id/album_number2_tv" />

            <TextView
                android:id="@+id/album_name4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Coin"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/album_radius2_cv"
                app:layout_constraintStart_toEndOf="@+id/album_radius2_cv"
                app:layout_constraintTop_toTopOf="@+id/album_radius2_cv" />

            <TextView
                android:id="@+id/album_name5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="봄 안녕"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/album_number4_tv"
                app:layout_constraintStart_toEndOf="@+id/album_number4_tv"
                app:layout_constraintTop_toTopOf="@+id/album_number4_tv" />

            <TextView
                android:id="@+id/album_artist2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="아이유(IU)"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_radius_cv"
                app:layout_constraintTop_toBottomOf="@+id/album_radius_cv" />

            <TextView
                android:id="@+id/album_artist3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="아이유(IU)"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_name3_tv"
                app:layout_constraintTop_toBottomOf="@+id/album_name3_tv" />

            <TextView
                android:id="@+id/album_artist4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="아이유(IU)"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_radius2_cv"
                app:layout_constraintTop_toBottomOf="@+id/album_radius2_cv" />

            <TextView
                android:id="@+id/album_artist5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="아이유(IU)"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/album_name5_tv"
                app:layout_constraintTop_toBottomOf="@+id/album_name5_tv" />

            <ImageView
                android:id="@+id/album_more2_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintBottom_toBottomOf="@+id/album_artist2_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/album_radius_cv" />

            <ImageView
                android:id="@+id/album_more3_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintBottom_toBottomOf="@+id/album_artist3_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/album_name3_tv" />

            <ImageView
                android:id="@+id/album_more4_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintBottom_toBottomOf="@+id/album_artist4_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/album_title2_tv" />

            <ImageView
                android:id="@+id/album_more5_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintBottom_toBottomOf="@+id/album_artist5_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/album_name5_tv" />

            <ImageView
                android:id="@+id/album_play_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_player_play"
                app:layout_constraintBottom_toBottomOf="@+id/album_more2_iv"
                app:layout_constraintEnd_toStartOf="@+id/album_more2_iv"
                app:layout_constraintTop_toTopOf="@+id/album_more2_iv" />

            <ImageView
                android:id="@+id/album_play2_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_player_play"
                app:layout_constraintBottom_toBottomOf="@id/album_more3_iv"
                app:layout_constraintEnd_toStartOf="@+id/album_more3_iv"
                app:layout_constraintTop_toTopOf="@+id/album_more3_iv" />

            <ImageView
                android:id="@+id/album_play3_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_player_play"
                app:layout_constraintBottom_toBottomOf="@id/album_more4_iv"
                app:layout_constraintEnd_toStartOf="@+id/album_more4_iv"
                app:layout_constraintTop_toTopOf="@+id/album_more4_iv" />

            <ImageView
                android:id="@+id/album_play4_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_player_play"
                app:layout_constraintBottom_toBottomOf="@id/album_more5_iv"
                app:layout_constraintEnd_toStartOf="@+id/album_more5_iv"
                app:layout_constraintTop_toTopOf="@+id/album_more5_iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>